@model IEnumerable<college_assignment_mvc_project.Models.Order>

@{
    ViewData["Title"] = "Cart";
    Dictionary<int, string> trackName = (Dictionary<int, string>)ViewData["dictionary"];
}

<div class="row">
    <div class="col-lg-12 text-center">
        <br><br><br>
        <hr>
        <h1>My Orders</h1>
        <hr>
        <br>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PurchasedTrackID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SelectedGuildeID)
            </th>
            <th>
               Name Track
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a asp-controller="Tracks" asp-action="Info" asp-route-id="@item.PurchasedTrackID">
                    @Html.DisplayFor(modelItem => item.PurchasedTrackID)
                </a>
            </td>
            <td>
                <a asp-controller="Guides" asp-action="Details" asp-route-id="@item.SelectedGuildeID">
                    @Html.DisplayFor(modelItem => item.SelectedGuildeID)
                </a>
            </td>
            <td>
                @trackName[item.PurchasedTrackID]
            </td>
        </tr>
        }
    </tbody>
</table>



