@{
    ViewData["Title"] = "Search";
}

<div class="row ">
    <div class="col-lg-12 text-center">
        <br><br><br>
        <hr>
        <h1 class="tagline">@ViewData["Title"]</h1>
        <p>Searching for the following: @ViewData["Message"]</p>
        <hr>
        <br>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <td>
                Name
            </td>
            <td>
                Location
            </td>
            <td>
                Rate
            </td>
            <td>
                Image
            </td>
        </tr>

        @foreach (var track in (IEnumerable<Track>)@ViewData["Result"])
        {
            <tr>
                <td>
                    <a asp-controller="Tracks" asp-action="Details" asp-route-id="@track.TrackID">
                        <h4>@track.Name</h4>
                    </a>
                </td>
                <td>
                    @track.Location
                </td>
                <td>
                    @track.Rate
                </td>
                <td>
                    <img src="@track.Image" alt="IMAGES" />
                </td>
            </tr>
        }
    </thead>
</table>
