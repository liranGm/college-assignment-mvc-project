@model IEnumerable<college_assignment_mvc_project.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<div class="row ">
    <div class="col-lg-12 text-center">
        <br><br><br>
        <hr>
        <h1>Orders</h1>
        <hr>
        <br>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchasedTrackID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SelectedGuildeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchasedTrackID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SelectedGuildeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.customer.UserID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
