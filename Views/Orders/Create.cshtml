@model college_assignment_mvc_project.Models.Order

@{
    @using Microsoft.AspNetCore.Http;
    ViewData["Title"] = "Create";
    var userID_from_session = Context.Session.GetString("UserID");
    var userConnected = Context.Session.GetString("IsUserLoggedIn");
}

<br><br><br>


<div class="signup-form">
    <form asp-action="Create" method="post">
        <h2>Order a Trip</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="UserID" class="control-label"></label>
            <input asp-for="UserID" class="control-label" value="@userID_from_session" readonly/>
        </div>
        <div class="form-group">
            <label asp-for="PurchasedTrackID" class="control-label"></label>
            <input asp-for="PurchasedTrackID" class="form-control" value="@ViewData["TrackID"]" readonly/>
            <span asp-validation-for="PurchasedTrackID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SelectedGuildeID" class="control-label"></label>
            <input asp-for="SelectedGuildeID" class="form-control" value="@ViewData["GuideID"]" readonly/>
            <span asp-validation-for="SelectedGuildeID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Order" class="btn btn-success btn-lg btn-block" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
