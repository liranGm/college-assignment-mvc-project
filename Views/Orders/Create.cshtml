@model college_assignment_mvc_project.Models.Order

@{
    ViewData["Title"] = "Create";
}

<br><br><br>


    <div class="signup-form">
        <form asp-action="Create" method="post">
            <h2>Order a Trip</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID"></select>
            </div>
            <div class="form-group">
                <label asp-for="PurchasedTrackID" class="control-label"></label>
                <input asp-for="PurchasedTrackID" class="form-control" value="@ViewData["TrackID"]"/>
                <span asp-validation-for="PurchasedTrackID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedGuildeID" class="control-label"></label>
                <input asp-for="SelectedGuildeID" class="form-control" value="@ViewData["GuideID"]"/>
                <span asp-validation-for="SelectedGuildeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseDate" class="control-label"></label>
                <input asp-for="PurchaseDate" class="form-control" />
                <span asp-validation-for="PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TripsDate" class="control-label"></label>
                <input asp-for="TripsDate" class="form-control" />
                <span asp-validation-for="TripsDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Order" class="btn btn-success btn-lg btn-block" />
            </div>
        </form>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
